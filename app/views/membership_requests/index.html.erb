<h1 class="mb-4 text-2xl font-bold">Üyelik Talepleri</h1>

<div class="space-y-4">
  <% @membership_requests.each do |membership_request| %>
    <div class="p-4 bg-white rounded-lg shadow-md">
      <p><strong>Kullanıcı:</strong> <%= membership_request.user.email %></p>
      <p><strong>Kulüp:</strong> <%= membership_request.club.name %></p>
      <p><strong>Onaylı:</strong> <%= membership_request.approved ? 'Evet' : 'Hayır' %></p>
      <div class="flex mt-2 space-x-4">
        <%= link_to 'Göster', membership_request_path(membership_request), class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700' %>
        <%= link_to 'Düzenle', edit_membership_request_path(membership_request), class: 'bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-700' %>
        <%= link_to 'Sil', membership_request, method: :delete, data: { confirm: 'Emin misiniz?' }, class: 'bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700' %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Yeni Üyelik Talebi', new_membership_request_path, class: 'bg-green-500 text-white px-4 py-2 rounded hover:bg-green-700 mt-4' %>
