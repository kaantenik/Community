<div class="flex items-center justify-center min-h-screen bg-gray-700">
  <div class="w-full max-w-xs">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-gray-800 shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
      <%= f.hidden_field :role, value: 'user' %> 
      <div class="mb-4">
        <%= f.label :email, class: "block text-white text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, class: "bg-gray-700  shadow appearance-none border rounded w-full py-2 px-3 text-white leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block text-white text-sm font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-700 shadow appearance-none border rounded w-full py-2 px-3 text-white leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-white text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-700 shadow appearance-none border rounded w-full py-2 px-3 text-white leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="flex items-center justify-between">
        <%= f.submit 'KayÄ±t Ol', class: "text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800" %>
      </div>
    <% end %>
  </div>
</div>
